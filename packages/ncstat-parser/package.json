{
  "name": "@ncstat/parser",
  "version": "1.0.0",
  "description": "Static NC file parser and analyzer",
  "author": "Kevin Hill",
  "license": "MIT",
  "private": true,
  "source": "src/index.ts",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "jest",
    "lint": "eslint 'src/**/*.ts'",
    "start": "yarn build && node ./demo/TRM.js",
    "predemo": "rimraf ./build/*",
    "dev": "tsc-watch --project tsconfig.build.json --onSuccess \"node ./demo/TRM.js\"",
    "build": "tsc --project tsconfig.build.json",
    "test:NcProgram": "yarn test --watch NcProgram"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix './src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@xstate/fsm": "^1.5.1",
    "debug": "^4.1.1",
    "emittery": "^0.7.2",
    "lodash": "^4.17.20",
    "ts-pattern": "^1.1.0",
    "ts-tokenizr": "^1.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^6.0.0",
    "prettier": "^2.1.2",
    "rollup": "^2.33.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.2"
  }
}
